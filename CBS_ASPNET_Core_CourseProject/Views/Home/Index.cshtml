@model CBS_ASPNET_Core_CourseProject.Controllers.HomeController.CurrencyRatesViewModel
@using CBS_ASPNET_Core_CourseProject.Entities
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<User> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="SendCurrencyRatesEmail" method="post">
        <button type="submit" class="btn btn-primary">Send Me Today's Currency Rates</button>
    </form>
}
<h1>Currency Rates</h1>

<h2>PrivatBank Rates</h2>
<table class="table">
    <thead>
        <tr>
            <th>Currency</th>
            <th>Buy Rate</th>
            <th>Sell Rate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rate in Model.PrivatBankRates)
        {
            <tr>
                <td>@rate.CurrencyCode to @rate.BaseCurrencyCode</td>
                <td>@rate.BuyRate</td>
                <td>@rate.SellRate</td>
            </tr>
        }
    </tbody>
</table>

<h2>Monobank Rates</h2>
<table class="table">
    <thead>
    <tr>
        <th>Currency</th>
        <th>Buy Rate</th>
        <th>Sell Rate</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var rate in Model.MonobankRates)
    {
        <tr>
            <td>@rate.CurrencyCode to @rate.BaseCurrencyCode</td>
            <td>@rate.BuyRate</td>
            <td>@rate.SellRate</td>
        </tr>
    }
    </tbody>
</table>

<h2>NBU Rates</h2>
<table class="table">
    <thead>
    <tr>
        <th>Currency</th>
        <th>Rate</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var rate in Model.NbuRates)
    {
        <tr>
            <td>@rate.CurrencyCode to @rate.BaseCurrencyCode</td>
            <td>@rate.BuyRate</td>
        </tr>
    }
    </tbody>
</table>